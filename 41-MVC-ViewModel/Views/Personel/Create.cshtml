@using _41_MVC_ViewModel.Models.Enums;
@model _41_MVC_ViewModel.Models.vMs.CreateVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Personel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" asp-controller="Personel">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Personel.ID" class="control-label"></label>
                <input asp-for="Personel.ID" class="form-control" />
                <span asp-validation-for="Personel.ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Personel.Name" class="control-label"></label>
                <input asp-for="Personel.Name" class="form-control" />
                <span asp-validation-for="Personel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Personel.BirthDate" class="control-label"></label>
                <input asp-for="Personel.BirthDate" class="form-control" />
                <span asp-validation-for="Personel.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Personel.Department" class="control-label"></label>
                <select asp-for="Personel.Department" class="form-control" asp-items="@(new SelectList(Model.Departments,"ID","Name"))">
                    @*<option>Lütfen seçiniz...</option>
                    @foreach (Department item in Model.Departments)
                    {
                        <option value="@item.ID">@item.Name</option>
                    }*@
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Personel.WorkingType" class="control-label"></label>
                <select asp-for="Personel.WorkingType" class="form-control" asp-items="@Html.GetEnumSelectList<WorkingType>()">
                    <option>Lütfen seçiniz...</option>
                </select>
                <span asp-validation-for="Personel.WorkingType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

